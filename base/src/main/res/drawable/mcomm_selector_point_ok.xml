    <item android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="@color/color_ffd9d9d9" />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <solid android:color="@color/color_ffd9d9d9" />
        </shape>
    </item>

</selector>