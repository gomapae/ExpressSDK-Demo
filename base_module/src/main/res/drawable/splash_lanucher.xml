<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--背景色-->
    <item
        android:gravity="fill">
        <shape android:shape="rectangle">
            <solid android:color="#00D396" />
        </shape>
    </item>
    <item
        android:height="118dp"
        android:bottom="0dp"
        android:gravity="bottom">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:top="60dp">
        <bitmap
            android:gravity="top|center_horizontal"
            android:src="@mipmap/ic_splash_center" />
    </item>
    <item
        android:height="84dp"
        android:gravity="bottom|fill_horizontal"
        android:left="0dp"
        android:right="0dp"
        android:bottom="118dp">
        <bitmap
            android:gravity="bottom|fill_horizontal"
            android:src="@mipmap/ic_splash_house" />
    </item>
    <item
        android:height="@dimen/dp_50"
        android:width="@dimen/dp_145"
        android:gravity="center_horizontal|bottom"
        android:bottom="@dimen/dp_30">
        <bitmap
            android:gravity="bottom|center_horizontal"
            android:src="@mipmap/ic_splash_logo" />
    </item>
</layer-list>